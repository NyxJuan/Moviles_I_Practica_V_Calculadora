<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/btn_Calcular"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginTop="484dp"
        android:background="#F1FBFB"
        android:text="Calcular"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/valor_2"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_marginStart="224dp"
        android:layout_marginTop="204dp"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:hint="   Valor 2"
        android:inputType="number"
        android:maxLength="4"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/valor_1"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="204dp"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:hint="   Valor 1"
        android:inputType="number"
        android:maxLength="4"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ver_Resultado"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:background="#FFFFFF"
        android:gravity="center_vertical"
        android:paddingRight="20dp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textSize="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlCompat" />

    <Button
        android:id="@+id/btn_Multiplicacion"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="206dp"
        android:layout_marginTop="329dp"
        android:layout_weight="1"
        android:background="#F1FBFB"
        android:gravity="center"
        android:text="ร"
        android:textSize="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_Suma"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="329dp"
        android:layout_weight="1"
        android:background="#F1FBFB"
        android:gravity="center"
        android:text="+"
        android:textSize="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_Resta"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="103dp"
        android:layout_marginTop="329dp"
        android:layout_weight="1"
        android:background="#F1FBFB"
        android:gravity="center"
        android:text="-"
        android:textSize="60dp"
        app:layout_constraintStart_toEndOf="@+id/btn_Suma"
        app:layout_constraintStart_toStartOf="@+id/btn_Suma"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_Division"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="102dp"
        android:layout_marginTop="329dp"
        android:layout_marginEnd="4dp"
        android:layout_weight="1"
        android:background="#F1FBFB"
        android:gravity="center"
        android:text="รท"
        android:textSize="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/btn_Multiplicacion"
        app:layout_constraintStart_toStartOf="@+id/btn_Multiplicacion"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>